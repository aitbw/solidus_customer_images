<%= render 'spree/shared/error_messages', target: @customer_image %>
<%= f.field_container :user_name do %>
  <%= f.label :user_name %><br />
  <%= f.text_field :user_name, maxlength: '255', size: '60' %>
<% end %>

<% if @customer_image.user %>
  <%= f.field_container :user do %>
    <%= f.label :user %><br />
    <%= link_to @customer_image.user.email, admin_user_path(@customer_image.user) %>
  <% end %>
<% else %>
  <%= f.field_container :email do %>
    <%= f.label :email %><br />
    <%= mail_to @customer_image.email %>
  <% end %>
<% end %>

<%= f.field_container :description do %>
  <%= f.label :description %><br />
  <%= f.text_area :description, class: 'fullwidth', rows: 4 %>
<% end %>
